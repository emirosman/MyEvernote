@using MyEvernote.Entities
@model  List<Note>

@*home index*@
<!-- bütün sayfanın container ı -->
<div class="container">

    <div class="row">
        @*Kategoriler Sekmesi*@
        <div class="col-md-3">
            @Html.Partial("_PartialCategories")
        </div>
        @* <p class="lead">Kategori</p>
            <div class="list-group">
                <a href="#" class="list-group-item">Tümü</a>
                <a href="#" class="list-group-item">Category 2</a>
                <a href="#" class="list-group-item">Category 3</a>
            </div>*@


        <div class="col-md-9">
            @* Carousel => tepede dönen zımbırtı***************************************************************************************@
            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        @*carousel göstergeler ??alttaki yuvarlakçıklar ??*@
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        @*carousel resimleri*@
                        <div class="carousel-inner">
                            <div class="item active">

                                <img class="slide-image" src="~/Images/Carousel/c1.jpg " alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Images/Carousel/c2.jpg " alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Images/Carousel/c3.jpg" alt="">
                            </div>
                        </div>
                        @*carousel sol sağ tuşları*@
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>

            </div>
            @*Ekrandki Kutular**********************************************************************************************************@
            <div class="row">

                @*kutu0*@
                @foreach (Note note in Model)
                {

                    <div class="col-sm-4 col-lg-4 col-md-4" data-note-id="@(note.Id)">
                        <div class="thumbnail" id="note-div">
                            <div class="owl-carousel">
                                <div> <img src="~/images/Notes/resim1.jpg"></div>
                                <div> <img src="~/images/Notes/resim4.jpg">  </div>
                            </div>
                                <div class="caption">
                                    <h4>
                                        <a href="#">@note.Title</a>
                                    </h4>
                                    <h6>
                                        @(note.Owner.Name + " " + note.Owner.Surname)<br />@*patates*@
                                        @note.ModifiedOn.ToString("dd.MM.yyyy")
                                    </h6>
                                    @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 60)
                                    {
                                        <p>@(note.Text.Substring(0, 56) + " ..." )</p>
                                        @*<p><a href="#" class="btn btn-sm btn-default bottom-left pull-left">Tamamını Oku<span class="glyphicon glyphicon-chevron-right"></span></a></p>*@
                                        //buton
                                        <button type="button" class="btn btn-sm btn-default " data-toggle="modal" data-target="@( string.Format("#myModel_{0}", note.Id))">
                                            Devamını oku
                                        </button>
                                        //*******************************MODEL POPUP*****************************************************************
                                        <div class="modal fade" id="@( string.Format("myModel_{0}", note.Id))" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content" yorum-id="@(note.Id)">
                                                    <!--EN son burayı deniyoruzz !!!!!!!!!!!!!!!!!!!!!!!!1-->
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                                                        <h2 class="modal-title" id="myModalLabel">@(note.Title)</h2>
                                                        <h3>@note.Text</h3>
                                                    </div>
                                                    @foreach (Comment com in note.Comments)
                                                    {
                                                    <!--************************************Yorum divinin başlangıcı **************************************************************-->
                                                        <div class="row">
                                                            <div class="modal-body">
                                                                <div class="media col-md-12">
                                                                    <div class="media-left col-md-2">
                                                                        <img class="media-object img-circle profilePicture" src="~/images/Users/@(com.Owner.ProfileImageFilename)" alt="profilePicture">@*clikten sonra sessiondan resim basılıcak*@
                                                                    </div>
                                                                    <div class="media-right col-md-10">
                                                                        <h4 class="media-heading">@(com.Owner.Name + " " + com.Owner.Surname)</h4>@*clikten sonra session isim soyisim basılıcak*@
                                                                        @(com.Text)@*clickten sonra sessionun bu nota ait yorumu basılıcak*@
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                    <!--************************************Yorumlar bitişi *************************************************************************************-->
                                                    <div class="row">
                                                        <div class="modal-body">
                                                            <div id="yorum_deneme"></div>
                                                        </div>
                                                    </div>

                                                    <br />
                                                    <!--****************************************textBox*********************************************************************************-->
                                                    <div class="modal-footer">
                                                        @if (Session["login"] != null)
                                                        {
                                                            <div class="col-lg-8 col-md-offset-2">
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" data-note-id="@(note.Id)" textbox-id="@(note.Id)" placeholder="Search for...">
                                                                    <span class="input-group-btn">
                                                                        <button class="btn btn-default"
                                                                                data-button-id="new-comment"
                                                                                data-note-id="@(note.Id)">
                                                                            @*<=denenebilir*@
                                                                            Go!
                                                                        </button>@*bu butonun click eventini alıcaz*@
                                                                    </span>
                                                                </div><!-- /input-group -->
                                                            </div><!-- /.col-lg-6 -->
                                                        }
                                                    </div>
                                                    <!--*******************************textbox bitiş*************************************************************************************-->
                                                </div>

                                            </div>
                                        </div>
                                        //model bitiş
                                    }
                                    else
                                    {
                                        @note.Text
                                    }

                                </div>

                                <div class="ratings">
                                    <button class="btn btn-default btn-xs pull-right"><span class="glyphicon glyphicon-comment">Yorumlar</span></button>
                                    <p>
                                        <!--***********************beğeni göstermeyi htmlle yapmak çılgınlar gibi döngü yiyo AJAX şart**********************************************************************************-->

                                        <button class="btn btn-default btn-xs " data-liked="false" data-note-id="@(note.Id)">
                                            <span class="glyphicon glyphicon-star-empty like-star"><span class="like-count">@note.LikeCount</span></span>
                                        </button>
                                        <!--benğileri listeleyince ne geliyo görmeli ekşınlar lazım-->
                                    </p>
                                </div>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        var owl = $('.owl-carousel');
        owl.owlCarousel({
            items: 1,
            loop: true,
            margin: 10,
            autoplay: true,
            autoplayTimeout: 1000,
            autoplayHoverPause: false
        });
        owl.trigger('stop.owl.autoplay');

        $("div#note-div").hover(function () {
            $(this).addClass("thumbborder");
            owl.trigger('play.owl.autoplay', [1000]);
        }, function () {
            $(this).removeClass("thumbborder");
            owl.trigger('stop.owl.autoplay');
        });
    });

</script>

